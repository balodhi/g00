          <ul  >
            <li>
            <a  class="<%="p#{province1}"%>" href="/cargos/city/<%=province1%>"> <%=$city_code_name[province1.to_s]%>(<%=get_province_cargo_from_count(province1)%>-<%=get_province_cargo_to_count(province1)%>)</a>
        </li>   
        <li>
        <%if i!=$sequnced_province.size && !$sequnced_province[i+1].blank?%>
              <%province2=$sequnced_province[i+1]%>
              <a  class="<%="p#{province2}"%>" href="/cargos/city/<%=province2%>"> <%=$city_code_name[province2.to_s]%>(<%=get_province_cargo_from_count(province2)%>-<%=get_province_cargo_to_count(province2)%>)</a>
            <%end%>
              </li>
          </ul>
        <%end%>
      <%end%>

