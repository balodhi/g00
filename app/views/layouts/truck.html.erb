          <ul class="menu-tree1">
            <a  class="<%="p#{province1}"%>  span4" href="/trucks/city/<%=province1%>"> <%=$city_code_name[province1.to_s]%>(<%=get_province_truck_from_count(province1)%>-<%=get_province_cargo_to_count(province1)%>)</a>
